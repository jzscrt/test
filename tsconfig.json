{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/_config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@databases": ["src/databases"],
      "@databases/*": ["src/databases/*"],
      "@dtos": ["src/dtos"],
      "@dtos/*": ["src/dtos/*"],
      "@enums": ["src/enums"],
      "@enums/*": ["src/enums/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@utils": ["src/_utils"],
      "@utils/*": ["src/_utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*", ".env.*"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"],
  "typeRoots": [
    "./_typings",
    "./node_modules/@types/"
  ]
}
