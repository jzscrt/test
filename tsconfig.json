{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "esnext.asynciterable"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["_config/*"],
      "@controllers/*": ["controllers/*"],
      "@databases": ["databases"],
      "@databases/*": ["databases/*"],
      "@dtos/*": ["dtos/*"],
      "@enums": ["enums"],
      "@enums/*": ["enums/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["_utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*", ".env.*"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
